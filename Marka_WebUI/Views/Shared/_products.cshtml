@model Product

<div class="col-md-4">
	<div class="card">
		<img src="~/img/@Model.Images[0].ImageUrl" alt="@Model.Name"/>
		<div class="card-body">
			<h4 class="card-title">
				<a href="#">@Model.Name</a>
			</h4>
			<small class="text-muted">
				<i class="fa-solid fa-turkish-lira-sign"></i> @Model.Price
			</small>
		</div>
		<div class="card-footer text-center">
			<a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">Details</a>
			<a href="#" class="btn btn-outline-primary">Add To Chart</a>
		</div>
	</div>
</div>