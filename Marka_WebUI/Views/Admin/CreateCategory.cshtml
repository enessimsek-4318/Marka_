@model CategoryModel
@{
    ViewData["Title"] = "CreateCategory";
}

<h1>CreateCategory</h1>
<hr />
<form asp-controller="Admin" asp-action="CreateCategory" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="mb-3 col-md-9 offset-md-3">
                <label asp-for="CategoryName" class="form-label"></label>
                <input asp-for="CategoryName" class="form-control" placeholder="CategoryName">
                <span asp-validation-for="CategoryName"></span>
            </div>

            <div class="mb-3 col-md-6 offset-md-3">
                <button type="submit" class="btn btn-primary">Save Category</button>
            </div>
        </div>
    </div>
</form>

